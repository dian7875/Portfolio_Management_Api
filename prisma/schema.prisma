generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @unique @default(uuid())
  passwordHash String
  name         String
  bio          String?
  location     String?
  hostUrl      String?
  photoUrl     String?
  cvUrl        String?
  email        String? @unique
  phone        String? @unique

  experiences  Experience[]
  education    Education[]
  skills       Skill[]
  projects     Project[]
  languages    Language[]
  socialMedias SocialMedia[]
}

model Language {
  id       Int     @id @default(autoincrement())
  userId   String
  language String
  hidden   Boolean @default(false)
  level    String
  user     User    @relation(fields: [userId], references: [id])
}

model Experience {
  id               Int       @id @default(autoincrement())
  userId           String
  role             String
  company          String
  startDate        DateTime
  endDate          DateTime?
  description      String?
  hidden           Boolean   @default(false)
  responsibilities String[]

  user User @relation(fields: [userId], references: [id])
}

model Education {
  id          Int       @id @default(autoincrement())
  userId      String
  institution String
  title       String
  description String?
  startDate   DateTime
  finished    Boolean
  endDate     DateTime?
  hidden      Boolean   @default(false)

  user User @relation(fields: [userId], references: [id])
}

model Skill {
  id       Int     @id @default(autoincrement())
  userId   String
  name     String
  level    Int?
  category String?
  hidden   Boolean @default(false)
  user     User    @relation(fields: [userId], references: [id])
}

model Project {
  id          Int      @id @default(autoincrement())
  userId      String
  title       String
  subtitle    String?
  description String?
  imagesUrl   String[]
  imagesPath  String[]
  repoUrl     String?
  demoUrl     String?
  techStack   String[]
  hidden      Boolean  @default(false)
  finishDate  DateTime
  user        User     @relation(fields: [userId], references: [id])
}

model SocialMedia {
  id           Int     @id @default(autoincrement())
  userId       String
  name         String
  redirectLink String
  hidden       Boolean @default(false)
  user         User    @relation(fields: [userId], references: [id])
}
